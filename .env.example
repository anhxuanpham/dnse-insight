# DNSE API Configuration
DNSE_API_BASE_URL=https://api.dnse.com.vn
DNSE_AUTH_URL=https://api.dnse.com.vn/auth-service

# Token-based Authentication (Recommended - Login API)
DNSE_USERNAME=your_custody_code_here  # e.g., 064CYIDYCG
DNSE_PASSWORD=your_password_here

# Legacy HMAC Authentication (Fallback)
DNSE_API_KEY=your_api_key_here
DNSE_API_SECRET=your_api_secret_here
DNSE_ACCOUNT_ID=your_account_id_here

# MQTT Configuration
MQTT_BROKER=mqtt.dnse.com.vn
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=dnse_trading_bot

# Trading Configuration
TRADING_MODE=paper  # paper or live
MAX_POSITION_SIZE=100000000  # VND
MAX_POSITIONS=10
RISK_PER_TRADE=0.02  # 2% risk per trade
DEFAULT_STOP_LOSS_PCT=0.03  # 3% stop loss

# DCA Bot Configuration
DCA_ENABLED=false
DCA_INTERVAL_HOURS=24
DCA_AMOUNT_PER_ORDER=10000000  # VND
DCA_SYMBOLS=VCB,VHM,VIC

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ENABLED=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Database Configuration
DATABASE_URL=sqlite:///./dnse_trading.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Strategy Configuration
ENABLE_BREAKOUT_STRATEGY=true
ENABLE_SUPPORT_RESISTANCE_STRATEGY=true
ENABLE_VOLATILITY_CUTLOSS=true

# Risk Management
MAX_DRAWDOWN_PCT=0.10  # 10% max drawdown
VOLATILITY_THRESHOLD=0.05  # 5% volatility threshold for cutloss
