# Configuration for 4GB RAM Server (2-3 CCU)
# Optimized for minimal resource usage

# DNSE API Configuration
DNSE_API_BASE_URL=https://api.dnse.com.vn
DNSE_AUTH_URL=https://api.dnse.com.vn/auth-service
DNSE_USERNAME=your_custody_code_here
DNSE_PASSWORD=your_password_here

# Trading Mode
TRADING_MODE=paper  # paper or live

# Database - Use SQLite (lightweight)
DATABASE_URL=sqlite:///./dnse_trading.db
# Don't use PostgreSQL on 4GB server

# Redis Configuration - Minimal
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_MAXMEMORY=256mb  # Limited for 4GB server
REDIS_MAXMEMORY_POLICY=allkeys-lru

# MQTT Configuration
MQTT_BROKER=mqtt.dnse.com.vn
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=dnse_trading_bot

# Trading Configuration - Conservative
MAX_POSITION_SIZE=50000000  # 50M VND
MAX_POSITIONS=5  # Reduced from 10
RISK_PER_TRADE=0.02
DEFAULT_STOP_LOSS_PCT=0.03

# Features - Disable heavy ones
ENABLE_ML_PREDICTIONS=false  # Skip ML to save RAM
ENABLE_BACKTEST=false  # Skip backtest
ENABLE_AI_ASSISTANT=false  # Skip AI assistant

# DCA Bot - Lightweight
DCA_ENABLED=false
DCA_INTERVAL_HOURS=24
DCA_AMOUNT_PER_ORDER=5000000  # 5M VND
DCA_SYMBOLS=VCB,VHM

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ENABLED=true

# Logging - Minimal
LOG_LEVEL=INFO  # Use INFO, not DEBUG
LOG_FILE=logs/trading_bot.log
LOG_ROTATION=10MB  # Smaller rotation

# Strategy Configuration - Essential only
ENABLE_BREAKOUT_STRATEGY=true
ENABLE_SUPPORT_RESISTANCE_STRATEGY=true
ENABLE_VOLATILITY_CUTLOSS=true

# Risk Management
MAX_DRAWDOWN_PCT=0.10
VOLATILITY_THRESHOLD=0.05

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
WORKERS=2  # Reduced for 4GB server (not 4)
